<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    tools:context=".Shop_6">

    <include layout="@layout/toolbar" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/toolbar"
        android:background="#33ffffff" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomview"
        android:layout_below="@+id/line"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="15.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15.5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/panel_500_px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15.5dp"
                    android:layout_marginTop="15.5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_rectangle"
                                android:fontFamily="@font/ari"
                                android:gravity="center"
                                android:letterSpacing="0.5"
                                android:paddingLeft="24dp"
                                android:paddingTop="5dp"
                                android:paddingRight="24dp"
                                android:paddingBottom="5dp"
                                android:text="HAT"
                                android:textColor="#ffffff"
                                android:textSize="6sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="15.8dp"
                            android:src="@drawable/ic_more" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="14dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:lineSpacingExtra="2dp"
                            android:text="Tab91 presents this cap, which is a perfect fusion of class and elegance."
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/panel_500_px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.6dp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="Annabel Lambert"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#fcfcfc"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#070707"
                    android:orientation="horizontal"
                    android:paddingTop="23dp"
                    android:paddingBottom="18.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="125"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="Hat"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="152"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="Gloves"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="137"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="Scarf"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="18.2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Hat"
                    android:textColor="#ffffff"
                    android:textSize="13.5sp" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.3dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:paddingBottom="29dp"
                    android:text="Green in colour, this knitted beanie by NEXT will be an excellent pick for fashion-forward women."
                    android:textColor="#ffffff"
                    android:textSize="15.5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30.2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="Colors"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:overScrollMode="never">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.4dp"
                android:layout_marginTop="29.6dp"
                android:layout_marginRight="8.2dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:lineSpacingExtra="7sp"
                android:text="Reset the rules of fashion and impress the rest as you step out rocking this grey beanie from adidas like a boss. Made from polyester, this beanie features small ribbed pattern all over and wide ribbed pattern on the border that elevates the style factor. It also features."
                android:textColor="#6e6e70"
                android:textSize="11sp" />

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.4dp"
                android:layout_marginTop="29.6dp"
                android:layout_marginRight="8.2dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:lineSpacingExtra="7dp"
                android:text="Accessorise like a pro, this winter and make the rest look at you starry-eyed by wear this black beanie from Dorothy Perkins. Made from acrylic fabric, this beanie features thin classic knit pattern."
                android:textColor="#6e6e70"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.2dp"
                android:layout_marginTop="69dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:text="Size"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/size_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#33ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.5dp"
            android:paddingTop="14dp"
            android:paddingRight="13.5dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/ari"
                    android:gravity="center"
                    android:text="269"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="32dp"
                    android:src="@drawable/ic_plus_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/ari"
                    android:text="269"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/profile1"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/profile2"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profile3"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/profile3"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/blank"
                        app:civ_border_color="#FFFFFF"
                        app:civ_border_width="1dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="+5"
                        android:textColor="#000000"
                        android:textSize="8sp" />
                </FrameLayout>
            </FrameLayout>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_reply" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13.5dp"
                android:fontFamily="@font/ari"
                android:text="12"
                android:textColor="#ffffff"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>